extends layout

block content
    h1 Edit a chat room

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", type="text", placeholder="Name to edit", value="#{room.name}")
            small.text-muted Give your chat room a meaningful name so people know what it's about.
        button.btn.btn-primary(type="submit") Save chat room
        a.btn.btn-default(href="admin/rooms") Cancel